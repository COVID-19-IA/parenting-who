{
  "name": "content-who-parents",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:COVID-19-IA/parenting-who.git",
  "author": "Takehiro Kawase <info@polaar.jp>",
  "license": "CC BY-NC-SA 4.0",
  "scripts": {
    "build:prod": "NODE_ENV=production npm-run-all -p build build:css build:js",
    "build": "eleventy",
    "build:css": "postcss src/style/main.css --config postcss.config.js --output docs/style.css",
    "build:js": "webpack",
    "watch": "DEBUG=Eleventy* eleventy --serve",
    "watch:css": "yarn build:css --watch",
    "watch:js": "webpack --watch --mode development",
    "dev": "npm-run-all -p watch watch:css watch:js",
    "clear": "rimraf docs",
    "lint:html": "markuplint docs/**/*.html --ruleset ./markuplintrc",
    "lint:css": "stylelint src/style/*",
    "validate:html": "html-validator --file=docs/parenting-who/index.html --verbose",
    "test": "npm-run-all -p lint:** validate:html \"prettier --check\"",
    "prettier": "prettier src/**/*.css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "autoprefixer": "^9.7.5",
    "cssnano": "^4.1.10",
    "dayjs": "^1.8.23",
    "html-validator-cli": "^7.0.0",
    "markuplint": "^1.0.0-alpha.38",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-custom-properties": "^9.1.1",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  }
}
